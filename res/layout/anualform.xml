<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/introbackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/fondocreacion"
    android:weightSum="10" >

    <RelativeLayout
        android:id="@+id/abovepart"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal"
    	android:layout_weight="4.4"
	    android:padding="6dip">
     </RelativeLayout>
	
	
	<LinearLayout
	    android:id="@+id/introcentral"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal"
	    android:layout_weight="1.2"
	    android:baselineAligned="false">
	    
		<LinearLayout
		    android:id="@+id/letfcentral"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1.08"
		    android:orientation="horizontal" >
	    
		</LinearLayout>

	        <TableLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="horizontal"
		    android:layout_weight="0.3"
	        android:weightSum="2">
	        
	        	<TableRow
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"
	        		android:layout_weight="1"
	        		android:orientation="horizontal">
	        	    
					<LinearLayout
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_weight="1"
					    android:gravity="center"
					    android:orientation="vertical" >
		        		
		        	        <TextView
		        	            android:text="@string/since"
		        	            android:textColor="#000000"
		        	            android:textSize="40sp"
		        	            android:layout_width="wrap_content"
		        	            android:layout_height="wrap_content"
		        	            android:gravity="center">
		        	            
		        	        </TextView>
		        	      	<CalendarView
		        	            android:id="@+id/sinceDay"
		        	            android:layout_width="300dip"
		        	            android:layout_height="200dip"
		        	            android:layout_gravity="center"
		        	            android:gravity="center"
		        	            android:minDate="01/01/2010"
		        	            android:background="#cccccc"
		        	            
		        	        />
		        	     </LinearLayout>

		        	    <LinearLayout
		        	        android:layout_width="fill_parent"
		        	        android:layout_height="fill_parent"
		        	        android:layout_weight="1"
		        	        android:gravity="center"
		        	        android:orientation="vertical" >

		        	        <TextView
		        	            android:text="@string/until"		        	            
		        	            android:textColor="#000000"		        	            
		        	            android:textSize="40sp"
		        	            android:layout_width="wrap_content"
		        	            android:layout_height="wrap_content">
		        	            
		        	        </TextView>
		        	        <CalendarView
		        	            android:id="@+id/untilDay"
		        	            android:layout_width="300dip"
		        	            android:layout_height="200dip"
		        	            android:layout_gravity="center"
		        	            android:gravity="center"		        	            
		        	            android:background="#cccccc"
		        	        />

	
						</LinearLayout>
	        	</TableRow>
	        	<TableRow
	        	    android:layout_width="fill_parent"
	        		android:layout_height="fill_parent"
	        		android:layout_weight="1"
	        		>

		        	    <LinearLayout
		        	        android:layout_width="fill_parent"
		        	        android:layout_height="fill_parent"
		        	        android:layout_weight="1"
		        	        android:gravity="center"
		        	        android:orientation="vertical" >

    	        	        <TextView
    	        	            android:layout_width="wrap_content"
    	        	            android:layout_height="wrap_content"
    	        	            android:textColor="#000000"
    	        	            android:textSize="40sp"
    	        	            android:text="@string/daybill">
    	        	        </TextView>
		        	        <CalendarView
		        	            android:id="@+id/billDay"
		        	            android:layout_width="300dip"
		        	            android:layout_height="200dip"
		        	            android:layout_gravity="center"
		        	            android:gravity="center"		        	            
		        	            android:background="#cccccc"
		        	        />
						</LinearLayout>
   	        	
	        	    <LinearLayout
	        	        android:layout_width="fill_parent"
	        	        android:layout_height="fill_parent"
	        	        android:layout_weight="1"
	        	        android:orientation="vertical"
	        	        android:layout_gravity="center"
	        	        android:gravity="center" >

	        		<Spinner
	        		    android:id="@+id/selectBillsAnual"
	        		    android:layout_width="fill_parent"
	        		    android:layout_height="wrap_content"
	        		     />

	        		<Spinner
	        		    android:id="@+id/selectModeAnual"
	        		    android:layout_width="fill_parent"
	        		    android:layout_height="wrap_content"
	        		     />

	        		</LinearLayout>
	        	   </TableRow>     
	        	   

	        </TableLayout>
		    	    
		<LinearLayout
		    android:id="@+id/rightcentral"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1.075"
		    android:orientation="horizontal" >
	    
		</LinearLayout>
	</LinearLayout>

	<RelativeLayout
	    android:id="@+id/introbelow"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:layout_weight="4.4">

	    <Button
	        android:id="@+id/backButton"
	        android:layout_width="150dip"
	        android:layout_height="80dip"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="159dp"
         	android:background="@drawable/graybutton"
			style="@style/ButtonText2"
	        android:text="@string/back" />

	    <Button
	        android:id="@+id/printButton"
	        android:layout_width="150dip"
	        android:layout_height="80dip"
	        android:layout_alignBaseline="@+id/backButton"
	        android:layout_alignBottom="@+id/backButton"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="156dp"
	        android:background="@drawable/graybutton"
			style="@style/ButtonText2"
	        android:text="@string/print" />

	</RelativeLayout>        
    
</LinearLayout>